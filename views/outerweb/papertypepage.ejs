        }   
    },
    mounted:function(){
      this.typeurl="/career/outerweb/paper/gosublist/"+this.personID;
      for(term of this.termlist){
        if(term.a20field=="a30explicit"){
          this.explicits.push(term)
        }
      }
      for(term of this.termlist){
        if(term.a20field=="a35category"){
          this.categorys.push(term)
        }
      }
      for(term of this.termlist){
        if(term.a20field=="a40course"){
          this.courses.push(term)
        }
      }
      for(explicit of this.explicits){
        let typecode=explicit.a25code;
        let typecount=this.knowledgelist.filter(ele=>ele.a30explicit==typecode).length;
        if(typecount>0){
        let tempobj=new Object();
        tempobj['papertype']=typecode;
        tempobj['label']=explicit.a30mean;
        tempobj['count']=typecount;
        console.log(tempobj.label);
        this.tables1.push(tempobj)
        }
      }
      for(course of this.courses){
        let typecode=course.a25code;
        let typecount=this.knowledgelist.filter(ele=>ele.a40course==typecode).length;
        if(typecount>0){
        let tempobj=new Object();
        tempobj['papertype']=typecode;
        tempobj['label']=course.a30mean;
        tempobj['count']=typecount;
        console.log(tempobj.label);
        this.tables2.push(tempobj)
        }
      }
      for(category of this.categorys){
        let typecode=category.a25code;
        let typecount=this.knowledgelist.filter(ele=>ele.a35category==typecode).length;
        if(typecount>0){
        let tempobj=new Object();
        tempobj['papertype']=typecode;
        tempobj['label']=category.a30mean;
        tempobj['count']=typecount;
        console.log(tempobj.label);
        this.tables3.push(tempobj)
        }
      }      
      this.explicits.sort((a,b)=>{
            return parseFloat(a.a25code)-parseFloat(b.a25code)
        })   
